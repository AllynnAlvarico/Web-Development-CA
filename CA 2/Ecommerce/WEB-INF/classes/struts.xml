<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="default" extends="struts-default">

        <action name="listProducts" class="alvarico.allynn.strut.ProductAction" method="list">
            <result name="success">/index.jsp</result>
        </action>

        <action name="register" class="alvarico.allynn.strut.RegistrationAction" method="register">
        	<result name="User Registered">/register-success.jsp</result>
    		<result name="Register Unsuccessful">/register.jsp</result>
        </action>

        <action name="login" class="alvarico.allynn.strut.LoginAction" method="login">
            <result name="success">/dashboard.jsp</result>
            <result name="error">/login-error.jsp</result>
        </action>

        <action name="logout" class="alvarico.allynn.strut.LoginAction" method="logout">
            <result name="logout">/login.jsp</result>
        </action>

        <action name="addProduct" class="alvarico.allynn.strut.ProductAction" method="create">
            <result name="success">/product-success.jsp</result>
            <result name="error">/product-error.jsp</result>
        </action>

        <action name="listUsers"
                class="alvarico.allynn.strut.GetAllUserAction"
                method="list">
            <result name="success">/all-users.jsp</result>
        </action>

        <action name="viewUser"
                class="alvarico.allynn.strut.GetAllUserAction"
                method="view">
            <result name="SUCCESS">/user-profile.jsp</result>
        </action>

    </package>
</struts>